<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/target3"
    >

    <TextView
        android:id="@+id/namecollection"
        android:layout_width="363dp"
        android:layout_height="22dp"
        android:layout_marginTop="244dp"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/muchmany"
        android:layout_width="363dp"
        android:layout_height="22dp"
        android:layout_marginTop="66dp"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/namecollection" />

    <TextView
        android:id="@+id/targetcollection"
        android:layout_width="363dp"
        android:layout_height="22dp"
        android:layout_marginTop="69dp"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/muchmany" />

    <TextView
        android:id="@+id/descriptioncollection"
        android:layout_width="359dp"
        android:layout_height="44dp"
        android:layout_marginTop="66dp"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/targetcollection" />

    <Spinner
        android:id="@+id/spinnercollection"
        android:layout_width="371dp"
        android:layout_height="30dp"
        android:layout_marginTop="60dp"
        android:spinnerMode="dropdown"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/descriptioncollection" />

    <Button
        android:id="@+id/button"
        android:layout_width="387dp"
        android:layout_height="43dp"
        android:alpha="0"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spinnercollection"
        app:layout_constraintVertical_bias="0.589" />
</androidx.constraintlayout.widget.ConstraintLayout>