    <style name="text">

        <item name="android:textSize">
            16sp
        </item>

        <item name="android:letterSpacing">
            -0.02
        </item>

        <item name="android:textColor">
            #818C99
        </item>

    </style>

    <!-- styles.xml -->
    <style name="label">

        <item name="android:textSize">
            15sp
        </item>

        <item name="android:letterSpacing">
            -0.02
        </item>

